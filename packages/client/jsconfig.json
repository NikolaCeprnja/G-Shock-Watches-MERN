{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "jsx": "react",
        "paths": {
            "@api/*": [
                "./api/*"
            ],
            "@assets/*": [
                "./assets/*"
            ],
            "@components/*": [
                "./components/*"
            ],
            "@containers/*": [
                "./containers/*"
            ],
            "@layouts/*": [
                "./layouts/*"
            ],
            "@pages/*": [
                "./pages/*"
            ],
            "@redux/*": [
                "./redux/*"
            ],
            "@shared/*": [
                "./shared/*"
            ],
            "@utils/*": [
                "./utils/*"
            ],
            "@validation/*": [
                "./validation/*"
            ]
        }
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "./node_modules"
    ]
}